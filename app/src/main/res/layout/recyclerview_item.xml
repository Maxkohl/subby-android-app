<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android=
    "http://schemas.android.com/apk/res/android"
    android:id="@+id/subCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/subName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sub_name_placeholder"
        android:textStyle="bold"
        android:padding="8dp"
        android:textSize="24dp"
        android:textColor="@color/White"
        style="@style/TextAppearance.AppCompat.Subhead"/>
    <TextView
        android:id="@+id/subPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/price_placeholder"
        android:textStyle="bold"
        android:padding="8dp"
        style="@style/TextAppearance.AppCompat.Subhead"

        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/subNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subName"
        android:text="@string/notes_placeholder"
        android:padding="8dp"
        style="@style/TextAppearance.AppCompat.Subhead"
        />

    <TextView
        android:id="@+id/subDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subPrice"
        android:layout_alignParentRight="true"
        android:text="@string/due_date"
        android:padding="8dp"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
    </androidx.cardview.widget.CardView>